<launch>
    <param name="deformable_type"       value="cloth"/>
    <param name="task_type"             value="cloth_single_pole"/>

    <!--<param name="cloth_com_x"           value="-0.2"/>-->
    <!--<param name="cloth_com_z"           value="0.0"/>-->

    <param name="cloth_x_size"          value="0.375"/>
    <param name="cloth_num_divs_x"      value="30"/>

    <param name="cloth_y_size"          value="0.375"/>
    <param name="cloth_num_divs_y"      value="30"/>

    <param name="cloth_cylinder_com_x"  value="0.0"/>
    <param name="cloth_cylinder_com_y"  value="0.0"/>
    <param name="cloth_cylinder_com_z"  value="0.8"/>

    <param name="cloth_cylinder_height" value="2.0"/>
    <param name="cloth_cylinder_radius" value="0.04"/>




    <param name="world_x_step"          value="0.02"/>
    <param name="world_x_min"           value="-0.4"/>
    <param name="world_x_max"           value="0.4"/>

    <param name="world_y_step"          value="0.02"/>
    <param name="world_y_min"           value="-0.3"/>
    <param name="world_y_max"           value="0.3"/>

    <param name="world_z_step"          value="0.02"/>
    <param name="world_z_min"           value="0.5"/>
    <param name="world_z_max"           value="1.1"/>




    <param name="cover_region_x_min"    value="-0.3"/>
    <param name="cover_region_x_steps"  value="1"/>
    <param name="cover_region_x_res"    value="0.01"/>

    <param name="cover_region_y_min"    value="-0.15"/>
    <param name="cover_region_y_steps"  value="31"/>
    <param name="cover_region_y_res"    value="0.01"/>

    <param name="cover_region_z_min"    value="0.6"/>
    <param name="cover_region_z_steps"  value="30"/>
    <param name="cover_region_z_res"    value="0.01"/>



    <param name="gripper_controller_type" value="random_sampling"/>
    <param name="max_sampling_counts" value="5000"/>
    <param name="distance_to_obstacle_threshold" value = "0.007"/>
   
    <param name ="stretching_factor_threshold" value = "1.06"/>
    <param name ="stretching_cosine_threshold" value = "0.75"/>
    
    <param name = "visualize_object_desired_motion" value = "false"/>



    <group ns="deform_simulator_node">
        <param name="num_simsteps_per_gripper_command"  value="10"/>
    </group>
</launch>
